@using StormCommerce.Models
@model ShippingDetails

@{
    ViewBag.Title = "Alışverişi Tamamla";
}

<style>
    .field-validation-error{color:#f00;}
    .field-validation-valid{display:none;}
    .input-validation-error{border: 1px solid #f00; background-color:#fee;}
    .validation-summary-errors{font-weight:bold; color:#f00;}
    .validation-summary-valid{display:none;}
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <p>Lütfen sipariş bilgileriniz doldurunuz</p>
            <hr />

            @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post))
            {
                @Html.ValidationSummary()

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Ad Soyad</label>
                    <div class="col-md-6">
                        <span class="badge-danger">
                            @User.Identity.Name
                        </span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Adres Başlığı</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.AddressTitle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Adres</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Şehir</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Semt</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.Distinct, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Posta Kodu</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label"></label>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-"></i> Onayla</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>