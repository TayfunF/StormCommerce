@model IEnumerable<StormCommerce.Models.ViewModels.UserOrderVM>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam</th>
                        <th>Sipariş Durumu</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model)
                        {
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>@item.Total ₺</td>
                            <td>@item.OrderState</td>
                            <td>
                                @Html.ActionLink("Detaylar", "Details", "Account", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

